        <Expander x:Name="expander" Header="Settings and Diagnostics" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Margin="6" Height="Auto">
                <StackPanel Margin="6">
                <TextBlock>Display</TextBlock>
                <ComboBox ItemsSource="{Binding Desktops}" SelectedIndex="{Binding SelectedDesktop}" Margin="6"></ComboBox>
                <TextBlock>Rectangle</TextBlock>
                <TextBlock Text="{Binding Rectangle}" Margin="6" />
                <TextBlock>Notify</TextBlock>
                <CheckBox IsChecked="{Binding Notify}" Margin="6" Content="Notify app's messages by toast." />
            </StackPanel>
        </Expander>

